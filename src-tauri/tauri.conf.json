{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Prasaran",
  "version": "0.1.1",
  "identifier": "io.github.birajrai.prasaran",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Prasaran - Stream Viewer",
        "width": 1280,
        "height": 720,
        "minWidth": 480,
        "minHeight": 320,
        "resizable": true,
        "maximizable": true,
        "maximized": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.facebook.com https://www.youtube.com https://s.ytimg.com; frame-src https://www.facebook.com https://www.youtube.com https://www.youtube-nocookie.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://www.facebook.com https://www.youtube.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
